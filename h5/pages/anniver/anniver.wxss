@import "../../static/css/iconfont.wxss"

.avatar_view{
  padding-top: 25px;
  position: relative;
}

.avatar{
  width: 15vh;
  height: 15vh;
  border-radius: 15vh;
}

.avatar_left{
  float: left;
  margin-left: 7px;
  z-index: 101;
}

.avatar_right{
  float: right;
  margin-right: 7px;
}

.left{
  float: left;
  width: 50%;
  position: relative;
}

.right{
  float: right;
  width: 50%;
  position: relative;
  z-index: 101;
  text-align: right;
}

.clear{
  clear: both;
}

.bar{
  margin-top: 50px;
  padding: 0 20px;
  font-size: 12px;
  color: gray;
}

.ion{
  font-size: 50px;
  color: #fa5756;
  z-index: 100;
  position: absolute;
  left: 50%;
  margin-left: -25px;
}

.right_text{
  text-align: right;
}

.right_text text{
  color: #fa5756;
}

.tag{
  font-size: 12px;
  color: #fa5756;
}

progress{
  z-index: 999 !important;
  margin-top: 3px;
}