@import "../../static/css/iconfont.wxss"
@import "../../static/css/iconfont_w.wxss"

/* 自定义样式 */
.home_view{
  height: 100%;
}

.big_btn_view{
  padding: 0rpx 26.25rpx; 
  display: flex; 
  flex-wrap: wrap; 
  justify-content: space-between; 
  position: relative;
}

.big_nav{
  width: 333.75rpx; 
  height: 333.75rpx; 
  background-color: rgb(237, 237, 237); 
  margin-bottom: 26.25rpx; 
  position: relative; 
  border-radius: 10px;
  margin-top: 26.25rpx;
}

.bg-red{
  background-color: #f95856;
}

.bg-blue{
  background-color: #29cce3;
}

.bg-green{
  background-color: #24ceb1;
}

.bg-yellow{
  background-color: #fcad37;
}

.banner{
  width: 100%;
  height: 150px;
}

.nav-title{
  text-align: center;
  color: white;
  margin-top: 20px;
  font-size: 20px;
  line-height: 20px;
  font-weight: bold;
}

.nav-bottom{
  color: white;
  text-align: center;
  font-size: 12px;
  position: absolute;
  left: 0;
  right: 0;
  margin: auto;
  bottom: 5px;
}

.nav-days{
  font-size: 20px;
}

.icon{
  text-align: center;
  font-size: 60px;
  color: white;
  margin-top: 15px;
}

.top-left{
  border-bottom-right-radius: 70px;
}

.top-right{
  border-bottom-left-radius: 70px;
}

.bottom-left{
  border-top-right-radius: 70px;
}

.bottom-right{
  border-top-left-radius: 70px;
}

.time{
  position: absolute;
  width: 80px;
  height: 80px;
  background-color: pink;
  margin: auto;
  top: 0;
  bottom: 0;
  right: 0;
  left: 0;
  border-radius: 80px;
}

.nav-title-mid{
  text-align: center;
  color: white;
  font-size: 18px;
  line-height: 80px;
  font-weight: bold;
}

.weather_view{
  background-color: #468ecf;
  width: 100%;
  height: 100%;
  color: white;
}

.weather-ion{
  margin-left: 15px;
  font-size: 100px;
  float: left;
}

.city{
  font-size: 20px;
  padding-left: 40px;
  padding-top: 25px;
  float: left;
}

.temp_name{
  font-size: 14px;
  text-align: right;
}

.temp{
  font-size: 55px;
  text-align: right;
}

.other{
  float: right;
  font-size: 12px;
  margin-right: 10px;
  padding-top: 10px;
}

.weather_time{
  position: absolute;
  margin: auto;
  right: 5px;
  bottom: 5px;
  font-size: 12px;
}