@import "../../static/css/iconfont.wxss"

.map{
  background-color: #efefef !important;
}

.map_view{
  width: 100%;
  height: 250px;
}

.map_map{
  width: 100%;
  height: 100%;
}

.btn{
  width: 85%;
  margin-top: 25px;
}

.text_view{
  margin-top: 15px;
}

.text{
  font-size: 14px;
  border: 1px solid #efefef;
  border-radius: 5px;
  width: 90%;
  padding: 7px;
  margin: auto;
  background-color: white;
}

.location{
  padding: 15px;
}

.name{
  font-size: 18px;
  color: #7e7b74;
}

.address{
  font-size: 12px;
  color: #b2b1ac;
}

.ion{
  position: absolute;
  font-size: 24px;
  color: #1692ff;
  right: 3%;
  line-height: 24px;
}

.btn-left{
  float: left;
  width: 60%;
  margin-left: 4%;
}

.btn-right{
  float: right;
  width: 30%;
  margin-right: 4%;
}