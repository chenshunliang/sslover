<view class="container map">
  <view class="map_view">
    <map id="sign_map" show-location class="map_map"></map>
  </view>
  <view class="location">
      <view bindtap="openMap" class="iconfont icon-location ion"></view>
      <view class="name">{{location_name}}</view>
      <view class="address">{{location_address}}</view>
  </view>
  <view class="text_view">
    <textarea class="text" placeholder="此刻心情..."></textarea>
    <view class="btn-left">
      <navigator bindtap="signPosition" class="ss-btn" hover-class="none">
        <text class="c-block ss-text">记录心情</text>
      </navigator>
    </view>
     <view class="btn-right">
      <navigator url="/pages/map/history" class="ss-btn ss-default" hover-class="none">
        <text class="c-block ss-text">回忆</text>
      </navigator>
    </view> 
  </view>
</view>
