@import "../../static/css/iconfont.wxss"

.listitemWrap {
    padding: 10px 56.25rpx;
}

.image_thumbView {
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: 15px;
    margin-top: 15px;
}

.image_thumb {
    width: 100%;
    height: 150px;
    background-color: transparent;
}

map {
  width: 100%;
}

.text_description {
    display: block;
    font-size: 13px;
    color: rgb(122, 122, 122);
    text-align: justify;
    line-height: 1.7em;
    margin-bottom: 5px;
    margin-top: 5px;
}

.listitemInfoWrap {
    padding-bottom: 7px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom-color: rgb(237, 237, 237);
    border-bottom-width: 1px;
    border-bottom-style: solid;
}

.likeinfo {
    display: flex;
    width: 80px;
    justify-content: space-between;
    align-items: center;
}

.likebtn {
    width: 28px;
    height: 28px;
    background-color: transparent;
}

.likeinfo_count {
    font-size: 12px;
    color: rgb(148, 148, 148);
    padding: 3px 10px;
    background-color: rgb(240, 240, 240);
    border-radius: 4px;
}

.listitem_creattime {
    font-size: 12px;
    color: rgb(186, 186, 186);
    padding-right: 2px;
}

.ion{
  font-size: 16px;
  line-height: 16px;
  color: #1692ff;
}

.ion text{
  font-size: 12px;
  line-height: 16px;
  height: 16px;
  color: rgb(186, 186, 186);
  margin-left: 5px;
  font-weight: bold;
}

.icon-l{
  color: #fa5756;
}